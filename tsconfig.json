// tsconfig.json
{
    "compilerOptions": {
      "target": "es6",                       // Cambia a la versión de ES que necesites
      "module": "commonjs",                  // Usa "commonjs" si estás en un entorno Node.js
      "outDir": "./dist",                    // Carpeta de salida para los archivos compilados
      "rootDir": "./src",                    // Carpeta de entrada donde están los archivos TypeScript
      "strict": true,                         // Habilitar todas las opciones de chequeo estricto
      "esModuleInterop": true,                // Habilitar interoperabilidad con módulos CommonJS
      "skipLibCheck": true                    // Omitir la comprobación de tipos en archivos de declaración
    },
    "include": ["src/**/*.ts"],               // Archivos a incluir en la compilación
    "exclude": ["node_modules"]               // Directorios a excluir de la compilación
  }
  